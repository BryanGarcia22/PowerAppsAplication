@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PowerAppsAplication</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/tether@1.4.7/dist/css/tether.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/animate.css@3.7.2/animate.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PowerAppsAplication.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Botón de toggle para dispositivos móviles -->
    <button class="toggle-btn btn btn-dark d-md-none" onclick="toggleSidebar()">
        <i class="bi bi-list"></i>
    </button>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <h3>AXTEL</h3>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Home">
                    <i class="bi bi-house-door"></i> Home
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Equipos">
                    <i class="bi bi-info-circle"></i> Equipos en SAP
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="EPPTorres">
                    <i class="bi bi-card-list"></i> Formularios
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="bi bi-envelope"></i> Contact
                </a>
            </li>
        </ul>
    </div>

    <!-- Page Content -->
    <div class="content">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Función para abrir/cerrar el sidebar
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('open');

            // Toggle para el contenido
            const content = document.querySelector('.content');
            content.classList.toggle('open');
        }
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.6/jspdf.plugin.autotable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.0/FileSaver.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


</body>
</html>

<style>
    /* Sidebar */
    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 250px;
        padding: 20px;
        background-color: #343a40;
        color: white;
        z-index: 1000;
        transition: left 0.3s ease; /* Transición para animar la apertura/cierre */
    }

    .sidebar a {
        display: block;
        color: white;
        padding: 10px 15px;
        text-decoration: none;
    }

    .sidebar a:hover {
        background-color: #495057;
    }

    /* Content */
    .content {
        margin-left: 250px;
        padding: 20px;
    }

    /* Botón de toggle */
    .toggle-btn {
        display: none;
    }

    /* Mostrar botón de toggle en dispositivos móviles */
    @@media (max-width: 768px) {
        .toggle-btn {
            display: block;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1100; /* Por encima del sidebar */
        }

        /* Ocultar el sidebar por defecto en dispositivos móviles */
        .sidebar {
            left: -250px;
        }

        /* Ajustar el margen izquierdo del contenido */
        .content {
            margin-left: 0;
        }

        /* Añadir transición al sidebar */
        .sidebar {
            transition: left 0.3s ease;
        }

        /* Desplazar el contenido cuando el sidebar está abierto */
        .sidebar.open {
            left: 0;
        }

        /* Ajuste para el contenido cuando el sidebar está abierto */
        .content.open {
            margin-left: 0;
        }
    }
</style>
